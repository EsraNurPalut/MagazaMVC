@model IEnumerable<MagazadbMVC.Models.Personeller>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<br />
<br />
<h2> PERSONELLER </h2>

<table class="table table-bordered col-md-11  ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonelAd)
        </th>
        <br />
        <th>
            @Html.DisplayNameFor(model => model.PersonelAdres)
        </th>
        <br />
        <th>
            @Html.DisplayNameFor(model => model.PersonelTelefon)
        </th>
        <br />
        <th>
            @Html.DisplayNameFor(model => model.MagazaNo)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.PersonelAd)
            </td>
            <td>
                @Html.DisplayFor(model => item.PersonelAdres)
            </td>
            <td>
                @Html.DisplayFor(model => item.PersonelTelefon)
            </td>
            <td>
                @Html.DisplayFor(model => item.MagazaNo)
            </td>
            <td>
                @Html.ActionLink("Düzenle ", "Duzenle", new { personelno = item.PersonelNo }, new { @class = "btn btn-danger" }) &nbsp;
                @Html.ActionLink("Sil ", "Delete", new { id = item.PersonelNo }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("KAYDET", "Ekle", null, new { @class = "btn btn-danger" })


