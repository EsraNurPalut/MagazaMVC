@model IEnumerable<MagazadbMVC.Models.Kargo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<br />
<br />
<h2> KARGO </h2>

<table class="table table-bordered col-md-11  ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KargoAd)
        </th>
        <br />
        <th>
            @Html.DisplayNameFor(model => model.UrunNo)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.KargoAd)
            </td>
            <td>
                @Html.DisplayFor(model => item.UrunNo)
            </td>
            <td>
                @Html.ActionLink("Düzenle ", "Duzenle", new { kargono = item.KargoNo }, new { @class = "btn btn-danger" }) &nbsp;
                @Html.ActionLink("Sil ", "Delete", new { id = item.KargoNo }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("KAYDET", "Ekle", null, new { @class = "btn btn-danger" })

